<?xml version="1.0" encoding="UTF-8"?>
<templates id="template" xml:space="preserve">

    <t t-inherit="point_of_sale.ReceiptScreen" t-inherit-mode="extension">
        <xpath expr="//div[hasclass('buttons')]" position="inside">
            <button class="button print-invoice" t-on-click="printInvoice" style="margin-left:5px;">
                <i class="fa fa-print" /> Imprimir Factura
            </button>
        </xpath>
    </t>

</templates>